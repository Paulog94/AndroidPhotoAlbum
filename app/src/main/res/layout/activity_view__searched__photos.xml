<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group53.android53.View_Searched_Photos">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sImg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="prev"
        android:id="@+id/prevS"
        android:onClick="next"
        android:layout_toLeftOf="@+id/nextS"
        android:layout_toStartOf="@+id/nextS"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/captionTV"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextS"
        android:onClick="next"
        android:layout_alignLeft="@+id/sImg"
        android:layout_alignStart="@+id/sImg"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/captionTV"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Caption"
        android:id="@+id/captionTV"
        android:layout_below="@+id/sImg"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
